<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <!--Top Wave Background-->
    <ImageView
        android:id="@+id/ivTopWave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_top_wave" />

    <!--Login-->
    <RelativeLayout
        android:layout_below="@+id/ivTopWave"
        android:layout_above="@+id/ivBottomWave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

    <TextView
        android:id="@+id/loginTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="LOG IN"
        android:textSize="42sp"
        android:textStyle="bold" />

    <!--Login Layout-->
    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/loginTv"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="-100dp">

        <RelativeLayout
            android:id="@+id/svRl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-70dp"
            android:layout_marginRight="50dp">
            <!--Login Info-->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="70dp"
                app:cardElevation="3dp">

                <RelativeLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp">
                    <!--Email-->
                    <EditText
                        android:id="@+id/emailEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:background="@android:color/transparent"
                        android:drawableLeft="@drawable/ic_baseline_email_24"
                        android:drawablePadding="30dp"
                        android:hint="email"
                        android:inputType="textEmailAddress"
                        android:padding="10dp" />
                    <!--HR-->
                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/emailEt"
                        android:background="#71d2d2d2" />
                    <!--Password-->
                    <EditText
                        android:id="@+id/pwdEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_below="@+id/view1"
                        android:background="@android:color/transparent"
                        android:drawableLeft="@drawable/ic_baseline_lock_24"
                        android:drawablePadding="30dp"
                        android:hint="password"
                        android:inputType="textPassword"
                        android:padding="10dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <!--Login Button-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/cv"
                android:layout_alignBottom="@+id/cv"
                android:layout_alignRight="@+id/cv"
                android:layout_marginRight="-30dp"
                android:elevation="10dp">
                <ImageButton
                    android:id="@+id/loginBtn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/rounded_corner_yellow"
                    android:src="@drawable/ic_baseline_double_arrow_24"/>
            </RelativeLayout>
            <!--Forgot Pwd-->
            <TextView
                android:id="@+id/forgotPwdTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:text="Forgot password?"
                android:layout_marginTop="8dp"
                android:textColor="@color/primaryDimBlue"
                android:textSize="14sp"
                android:layout_below="@+id/cv"/>
            <!--Signup-->
            <TextView
                android:id="@+id/signupTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:text="Sign up"
                android:layout_marginTop="8dp"
                android:textColor="@color/primaryBlue"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_below="@+id/forgotPwdTv"/>
            <ImageView
                android:id="@+id/googleSignInBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/icon_google"
                android:scaleType="fitStart"
                android:layout_below="@id/signupTv"
                />

        </RelativeLayout>
    </ScrollView>

    </RelativeLayout>

    <!--Bottom Slogan-->
    <TextView
        android:id="@+id/sloganTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share your fitness with us"
        android:textColor="@color/primaryGray"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_above="@+id/ivBottomWave"
        />
    <!--Bottom Wave Background-->
    <ImageView
        android:id="@+id/ivBottomWave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_bottom_wave" />


</RelativeLayout>